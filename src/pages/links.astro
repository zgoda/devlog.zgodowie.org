---
import BaseLayout from '../layouts/BaseLayout.astro';
import data from '../data/links.json';
import { parseLinksDataset } from '../lib/content';
import LinkCategory from '../components/LinkCategory.astro';

const categories = parseLinksDataset(data.links);

const pageTitle = 'Bardziej i mniej przydatne linki';
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    Kolekcja linków do narzędzi, które kiedyś mi się przydały. Nie weryfikuję na bieżąco
    ich aktualności, więc może się zdarzyć że któryś z nich będzie prowadził w kosmos.
    Takie jest smutne życie w internecie.
  </p>
  {categories.map(([key, value]) => <LinkCategory name={key} links={value} />)}
</BaseLayout>
